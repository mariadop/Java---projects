public static void main(String[] args) {
    int[] numbers = {1, 3, 4, 5, 6, 7, 8, 9, 10};
    System.out.println(binarySearch(numbers, 4));
    System.out.println(binarySearchRecursive(numbers, 5, 0, numbers.length - 1));
}

public static int binarySearch(int[] numbers, int searched) {
    int first = 0;
    int last = numbers.length - 1;

    while (first <= last) {
        int middle = (first + last) / 2;
        if (numbers[middle] == searched) return middle;
        else if (searched > numbers[middle]) first = middle + 1;
        else last = middle - 1;
    }

    return -1;
}

public static int binarySearchRecursive(int[] numbers, int searched, int first, int last) {
    if (first > last) return -1;
    int middle = (first + last) / 2;
    if (numbers[middle] == searched) return middle;

    if (searched > numbers[middle]) return binarySearchRecursive(numbers, searched, middle + 1, last);
    return binarySearchRecursive(numbers, searched, first, middle - 1);
}
